@{
    var userName = ViewBag.UserName;
    var userSurname = ViewBag.UserSurname;
}


<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Paneli</title>
    <style>
        .nav-profile-text {
            padding: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
            margin-bottom: 20px;
        }
    </style>
    
    <link rel="stylesheet" href="~/UserPanel/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/UserPanel/assets/vendors/css/vendor.bundle.base.css">
    
    <link rel="stylesheet" href="~/UserPanel/assets/css/style.css">
    
    <link rel="shortcut icon" href="~/UserPanel/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
       
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
               
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
               
                <ul class="navbar-nav navbar-nav-right">
                    
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                   
                   
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="/UserPanel/Logout">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                    
                </ul>
               
            </div>
        </nav>
       
        <div class="container-fluid page-body-wrapper">
            
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            
                            <div class=".nav-profile-text @* nav-profile-text d-flex flex-column *@">
                                <span class="font-weight-bold mb-2">@userName @userSurname</span>
                                <span class="font-weight-bold mb-2">Sistem Admini</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/AdminPanel/Index">
                            <span class="menu-title">Ana Sayfa</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    
                    
                   
                    <li class="nav-item">
                        <a class="nav-link" href="~/AdminPanel/GetAdmins">
                            <span class="menu-title">Admin</span>
                            <i class="mdi mdi-chart-bar menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Patient/Index">
                            <span class="menu-title">Hastalar</span>
                            <i class="mdi mdi-chart-bar menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Appointments/Index">
                            <span class="menu-title">Randevular</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Doctors/Index">
                            <span class="menu-title">Doktorlar</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Branches/Index">
                            <span class="menu-title">Hastane Bölümleri</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    
                    
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div >
                    @RenderBody()
                </div>
                
                
                
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/UserPanel/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/UserPanel/assets/vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/UserPanel/assets/js/off-canvas.js"></script>
    <script src="~/UserPanel/assets/js/hoverable-collapse.js"></script>
    <script src="~/UserPanel/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/UserPanel/assets/js/chart.js"></script>
    <!-- End custom js for this page -->
</body>
</html>
