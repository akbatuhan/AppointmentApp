@model EntityLayer.Entities.Patient
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h1>Yeni Şifre</h1>


<form method="post">


    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", style = "display: none;" })
    <br />
    
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "display: none;" })
    <br />

    
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", style = "display: none;" })
    <br />

    
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", style = "display: none;" })
    <br />
    
    @Html.TextBoxFor(x => x.Number, new { @class = "form-control", style = "display: none;" })

    <br />

    
    @Html.TextBoxFor(x => x.TC, new { @class = "form-control", style = "display: none;" })
    <br />

    @Html.Label("Yeni Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />

    @Html.Label("Yeni Şifre Tekrar")
    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })
    <br />




    <br />

    <button class="btn btn-primary">Şifreyi Değiştir</button>


</form>

