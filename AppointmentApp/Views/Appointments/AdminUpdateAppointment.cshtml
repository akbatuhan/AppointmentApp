@model EntityLayer.Entities.Appointment



@{
    ViewData["Title"] = "AdminUpdateAppointment";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h1>AdminUpdateAppointment</h1>

<form method="post">

    <div asp-validation-summary="All"></div>
    
    @Html.TextBoxFor(x=>x.Id,new{@class="form-control",style = "display: none;"})
    <br />
    @Html.Label("Hasta Id")
    @Html.TextBoxFor(x=>x.PatientId,new{@class="form-control"})
    <br />

    @Html.Label("Doktor Id")
    @Html.TextBoxFor(x=>x.DoctorId,new{@class="form-control"})
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
    <br />
    @Html.Label("Saat")
    @Html.TextBoxFor(x=>x.Hour,new{@class="form-control"})

    <br />

   

    


    <br />

    <button class="btn btn-primary">Güncelle</button>


</form>

