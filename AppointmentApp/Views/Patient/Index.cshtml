@using EntityLayer.Entities
@model List<Patient>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h1>Kayıtlı Hastalar</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Mail</th>
        <th>Numara</th>
        

    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Mail</td>
            <td>@item.Number</td>


            <td><a class="btn btn-outline-warning" href="/Patient/DeletePatient/@item.Id">Sistemden Sil</a></td>
           
        </tr>
    }
</table>


<a class="btn btn-primary" href="/Patient/AddPatient">Sisteme Yeni Hasta Ekle</a>

