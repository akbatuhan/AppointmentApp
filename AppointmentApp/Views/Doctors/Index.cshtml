@using EntityLayer.Entities
@model List<Doctor>

@{
    ViewData["Title"] = "Index";

    string layoutPath = ViewData["Condition"] as string switch
    {
        "MyLayout" => "~/Views/Shared/_MyLayout.cshtml",
        "AdminDashboard" => "~/Views/Shared/_AdminDashboard.cshtml",
        _ => "~/Views/Shared/_DashboardLayout.cshtml"
    };

    Layout = layoutPath;
}





<h1>Doktorlar</h1>


<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Doktor Adı</th>
        <th>Soyadı</th>
        <th>Branşı</th>
        @if (layoutPath == "~/Views/Shared/_AdminDashboard.cshtml")
        {
            <th>Silme</th>
            <th>Güncelleme</th>
           
        }
       
        
        
        
    </tr>

    @foreach (var item in Model){

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Branch.Name</td>
            @if (layoutPath == "~/Views/Shared/_AdminDashboard.cshtml")
            {
                <td><a class="btn btn-outline-warning" href="/Doctors/DeleteDoctor/@item.Id">Sil</a></td>
                <td><a class="btn btn-outline-primary" href="/Doctors/UpdateDoctor/@item.Id">Güncelle</a></td>
            }
            
            
            
            
        </tr>


    }
        
   
    

</table>




@if (layoutPath == "~/Views/Shared/_AdminDashboard.cshtml")
{
    <a class="btn btn-primary" href="/Doctors/AddDoctor">Yeni Doktor Ekle</a>
}

